# Yandex Maps Profile Visitor Configuration
# Copy this file to .env and modify values as needed

# Application Settings
YANDEX_BOT_APP_NAME="Yandex Maps Profile Visitor"
YANDEX_BOT_APP_VERSION="1.0.0"
YANDEX_BOT_DEBUG=true

# API Configuration
YANDEX_BOT_API_HOST=localhost
YANDEX_BOT_API_PORT=8000
YANDEX_BOT_API_RELOAD=true

# Database Configuration
YANDEX_BOT_DATABASE_URL=sqlite:///./yandex_maps_bot.db
# For PostgreSQL: postgresql://user:password@localhost:5432/yandex_maps_bot
YANDEX_BOT_DATABASE_ECHO=false

# Redis Configuration (for Celery)
YANDEX_BOT_REDIS_HOST=localhost
YANDEX_BOT_REDIS_PORT=6379
YANDEX_BOT_REDIS_DB=0
YANDEX_BOT_REDIS_PASSWORD=

# Security
YANDEX_BOT_SECRET_KEY=your-secret-key-change-this-in-production
YANDEX_BOT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Browser Configuration
YANDEX_BOT_BROWSER_HEADLESS=false

# Celery Worker Configuration
# Number of parallel worker processes for profile warmup
# Recommended: 2-4 for 8GB RAM, 4-6 for 16GB RAM, 6-8 for 32GB+ RAM
CELERY_WORKER_CONCURRENCY=4
YANDEX_BOT_BROWSER_TIMEOUT=30
YANDEX_BOT_MAX_BROWSER_INSTANCES=5
YANDEX_BOT_BROWSER_USER_DATA_DIR=./browser_profiles
YANDEX_BOT_BROWSER_DOWNLOAD_DIR=./downloads

# Anti-Captcha Configuration
YANDEX_BOT_ANTICAPTCHA_API_KEY=your_2captcha_or_anticaptcha_api_key
YANDEX_BOT_ANTICAPTCHA_SERVICE=2captcha
YANDEX_BOT_CAPTCHA_TIMEOUT=120

# Proxy Configuration
YANDEX_BOT_PROXY_CHECK_URL=http://httpbin.org/ip
YANDEX_BOT_PROXY_TIMEOUT=10
YANDEX_BOT_PROXY_MAX_RETRIES=3

# Rate Limiting
YANDEX_BOT_MIN_REQUEST_DELAY=5
YANDEX_BOT_MAX_REQUEST_DELAY=30
YANDEX_BOT_DAILY_VISIT_LIMIT=100

# Warmup Configuration
YANDEX_BOT_WARMUP_DURATION_MINUTES=30
YANDEX_BOT_WARMUP_MIN_PAGE_TIME=30
YANDEX_BOT_WARMUP_MAX_PAGE_TIME=300

# Yandex Maps Configuration
YANDEX_BOT_YANDEX_MIN_VISIT_TIME=120
YANDEX_BOT_YANDEX_MAX_VISIT_TIME=600

# Logging Configuration
YANDEX_BOT_LOG_LEVEL=INFO
YANDEX_BOT_LOG_FILE=./logs/app.log
YANDEX_BOT_MAX_LOG_FILE_SIZE=100
YANDEX_BOT_LOG_BACKUP_COUNT=5

# File Storage
YANDEX_BOT_SCREENSHOTS_DIR=./screenshots
YANDEX_BOT_LOGS_DIR=./logs
YANDEX_BOT_DATA_DIR=./data

# Task Configuration
YANDEX_BOT_MAX_CONCURRENT_TASKS=10
YANDEX_BOT_TASK_RETRY_DELAY=300
YANDEX_BOT_TASK_MAX_RETRIES=3
YANDEX_BOT_TASK_TIMEOUT=1800

# Example Warmup Sites (JSON format)
# YANDEX_BOT_WARMUP_SITES='["https://google.com", "https://youtube.com", "https://vk.com"]'

# Example Yandex Actions (JSON format)
# YANDEX_BOT_YANDEX_ACTIONS='["scroll", "click_photos", "read_reviews", "click_contacts"]'